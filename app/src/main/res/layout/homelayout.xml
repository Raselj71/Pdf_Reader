<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/moreContiner"
    android:background="@drawable/bottomshet_background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView

                android:layout_gravity="center_horizontal"
                android:src="@drawable/pdf_second"
                android:layout_width="150dp"
                android:layout_height="150dp">

            </ImageView>

            <TextView
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:textSize="25sp"
                android:text="@string/app_name"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


            <TextView
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:text="All in One PDF Manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>



        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/contact_us"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_contact_support_24"
                android:layout_width="40dp"
                android:layout_height="40dp">

            </ImageView>

            <TextView
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:text="Contact Us"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/share_app"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_share_24"
                android:layout_width="40dp"
                android:layout_height="40dp">

            </ImageView>

            <TextView
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:text="Share App"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
              android:id="@+id/rate_app"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_star_rate_24"
                android:layout_width="40dp"
                android:layout_height="40dp">

            </ImageView>

            <TextView
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:text="Rate Us"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/policy"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_policy_24"
                android:layout_width="40dp"
                android:layout_height="40dp">

            </ImageView>

            <TextView
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:text="Privacy Policy"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>


    </LinearLayout>








</LinearLayout>