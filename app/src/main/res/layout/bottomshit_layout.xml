<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:id="@+id/bottomshit_container"
    android:orientation="vertical"
    android:background="@drawable/bottomshet_background"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_margin="10dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/pdf_fourth"
            android:layout_width="64dp"
            android:layout_height="70dp">

        </ImageView>

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/bottomshit_heading"
                android:lines="1"
                android:maxLines="1"
                android:fontFamily="sans-serif-medium"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="Report Registration form 221902085"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bottomhshit_date"
                    android:text="27 Mar 2022 22:14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>


                <TextView
                    android:id="@+id/bottomshit_size"
                    android:text="4.77 KB"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:background="#333030"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <EditText
            android:backgroundTint="@color/tabTextColor"
            android:inputType="numberDecimal"
            android:text=""
            android:textColor="@color/black"
            android:id="@+id/gotopageEt"
            android:layout_width="60dp"
            android:layout_height="50dp">

        </EditText>

        <TextView
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:id="@+id/gotopageBt"
            android:clickable="true"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:text="Go to page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/pagebybpage"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mode_icon"
            android:src="@drawable/ic_baseline_menu_book_24"
            android:layout_width="40dp"
            android:layout_height="40dp">

        </ImageView>
        <TextView
            android:id="@+id/mode_name"
            android:padding="10dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="Book Mode"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/bottom_sharepdf"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_baseline_share_24"
            android:layout_width="40dp"
            android:layout_height="40dp">

        </ImageView>
        <TextView
            android:padding="10dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="Share"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

</LinearLayout>